{
  "name": "simple-node-typescript-starter",
  "version": "1.0.0",
  "description": "a typescript boilerplate based on best practices and tricks ðŸ¦„",
  "main": "index.js",
  "author": "Pavel 'PK' Kaminsky <kaminsky.pavel@gmail.com> (http://www.pavel-kaminsky.com)",
  "license": "ISC",
  "engineStrict": true,
  "engines": {
    "node": ">= 8.9.0"
  },
  "scripts": {
    "build": "tsc",
    "dev": "nodemon --exec npm run start",
    "start": "ts-node src/index.ts",
    "format": "prettier --write src/**/*.{json,ts}",
    "lint": "tslint --project .",
    "test": "yarn lint && jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:debug": "node --debug-brk --inspect ./node_modules/jest/bin/jest.js --runInBand",
    "precommit": "lint-staged",
    "prepush": "npm run build"
  },
  "homepage": "www.pavel-kaminsky.com",
  "dependencies": {
    "chalk": "^2.4.1",
    "ejs": "^2.6.1",
    "es6-promise": "^4.2.4",
    "husky": "^1.0.0-rc.6",
    "isomorphic-fetch": "^2.2.1",
    "lodash": "^4.17.10",
    "mkdirp": "^0.5.1",
    "moment": "^2.22.1",
    "numeral": "^2.0.6",
    "typescript": "^2.8.3"
  },
  "devDependencies": {
    "@types/ejs": "^2.5.1",
    "@types/fetch-mock": "^6.0.1",
    "@types/isomorphic-fetch": "^0.0.34",
    "@types/jest": "^22.2.3",
    "@types/lodash": "^4.14.108",
    "@types/mkdirp": "^0.5.2",
    "@types/node": "~9.6.2",
    "@types/node-fetch": "^1.6.9",
    "@types/numeral": "^0.0.22",
    "fetch-mock": "^6.4.2",
    "jest": "~22.4.3",
    "jest-cli": "^22.1.4",
    "lint-staged": "^7.1.0",
    "nodemon": "^1.17.4",
    "prettier": "^1.12.1",
    "ts-jest": "^22.4.6",
    "ts-node": "^6.0.3",
    "tslint": "^5.10.0"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn format && yarn test && yarn build"
    }
  },
  "lint-staged": {
    "src/**/*.{js,json}": [
      "prettier --write",
      "git add"
    ],
    "src/**/*.ts": [
      "prettier --parser typescript --write",
      "tslint --fix",
      "git add"
    ]
  }
}
