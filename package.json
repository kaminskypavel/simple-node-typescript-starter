{
  "name": "simple-node-typescript-starter",
  "version": "1.0.0",
  "description": "a typescript boilerplate based on best practices and tricks ðŸ¦„",
  "main": "index.js",
  "author": "Pavel 'PK' Kaminsky <kaminsky.pavel@gmail.com> (http://www.pavel-kaminsky.com)",
  "license": "ISC",
  "engineStrict": true,
  "engines": {
    "node": ">= 8.9.0"
  },
  "scripts": {
    "dev": "nodemon --exec npm run start",
    "start": "ts-node src/index.ts",
    "lint": "tslint --project .",
    "lint:fix": "yarn run lint --fix",
    "test": "yarn lint && jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:debug": "node --debug-brk --inspect ./node_modules/jest/bin/jest.js --runInBand",
    "precommit": "lint-staged"
  },
  "homepage": "www.pavel-kaminsky.com",
  "dependencies": {
    "chalk": "^2.3.0",
    "ejs": "^2.5.7",
    "es6-promise": "^4.2.4",
    "husky": "^0.14.3",
    "isomorphic-fetch": "^2.2.1",
    "lodash": "^4.17.4",
    "mkdirp": "^0.5.1",
    "moment": "^2.20.1",
    "numeral": "^2.0.6",
    "typescript": "^2.6.2"
  },
  "devDependencies": {
    "@types/ejs": "^2.5.0",
    "@types/fetch-mock": "^5.12.2",
    "@types/isomorphic-fetch": "^0.0.34",
    "@types/jest": "^22.1.0",
    "@types/lodash": "^4.14.92",
    "@types/mkdirp": "^0.5.2",
    "@types/node": "~8.0.49",
    "@types/node-fetch": "^1.6.7",
    "@types/numeral": "^0.0.22",
    "fetch-mock": "^6.0.0",
    "jest": "~21.2.1",
    "jest-cli": "^22.1.4",
    "lint-staged": "^6.1.0",
    "nodemon": "^1.14.7",
    "ts-node": "^4.1.0",
    "tslint": "^5.9.1",
    "tslint-microsoft-contrib": "^5.0.2"
  },
  "jest": {
    "roots": [
      "src"
    ],
    "setupFiles": [
      "<rootDir>/jest-setup.ts"
    ],
    "transform": {
      "^.+\\.ts$": "<rootDir>/jest-typescript.js"
    },
    "moduleFileExtensions": [
      "js",
      "ts"
    ],
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|js)$"
  },
  "lint-staged": {
    "*.ts": [
      "yarn lint:fix",
      "git add"
    ]
  }
}
