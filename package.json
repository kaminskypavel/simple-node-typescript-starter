{
  "name": "simple-node-typescript-starter",
  "version": "1.0.0",
  "description": "a typescript boilerplate based on best practices and tricks ðŸ¦„",
  "main": "index.js",
  "author": "Pavel 'PK' Kaminsky <kaminsky.pavel@gmail.com> (http://www.pavel-kaminsky.com)",
  "license": "ISC",
  "engineStrict": true,
  "engines": {
    "node": ">= 8.9.0"
  },
  "scripts": {
    "build": "tsc",
    "start": "ts-node-dev src/index.ts",
    "format": "prettier --write src/**/*.{json,ts}",
    "lint": "tslint --project .",
    "checkCodeDups": "jscpd",
    "checkLicenses": "jsgl --local .",
    "test": "yarn lint && yarn checkCodeDups && jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:debug": "node --debug-brk --inspect ./node_modules/jest/bin/jest.js --runInBand",
    "precommit": "lint-staged",
    "prepush": "npm run build"
  },
  "homepage": "www.pavel-kaminsky.com",
  "dependencies": {
    "chalk": "^2.4.1",
    "ejs": "^2.6.1",
    "husky": "^1.0.0-rc.13",
    "isomorphic-fetch": "^2.2.1",
    "lodash": "^4.17.10",
    "mkdirp": "^0.5.1",
    "moment": "^2.22.2",
    "numeral": "^2.0.6",
    "typescript": "^3.0.1"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0-beta.55",
    "@types/ejs": "^2.5.1",
    "@types/fetch-mock": "^6.0.1",
    "@types/isomorphic-fetch": "^0.0.34",
    "@types/jest": "^23.3.1",
    "@types/lodash": "^4.14.116",
    "@types/mkdirp": "^0.5.2",
    "@types/node": "^10.5.5",
    "@types/node-fetch": "^1.6.9",
    "@types/numeral": "^0.0.22",
    "fetch-mock": "^6.4.2",
    "jest": "^23.4.2",
    "jest-cli": "^23.4.2",
    "js-green-licenses": "^0.5.0",
    "jscpd": "^0.6.22",
    "lint-staged": "^7.2.0",
    "prettier": "^1.14.0",
    "ts-jest": "^23.1.1",
    "ts-node-dev": "^1.0.0-pre.26",
    "tslint": "^5.11.0"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn format && yarn jscpd && yarn test && yarn build"
    }
  },
  "lint-staged": {
    "src/**/*.{js,json}": [
      "prettier --write",
      "git add"
    ],
    "src/**/*.ts": [
      "prettier --parser typescript --write",
      "tslint --fix",
      "git add"
    ]
  }
}
